# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=src/main/resources/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_ISSUER_URI=https://securetoken.google.com/your-project-id
FIREBASE_UID=your-firebase-uid

# Stripe Configuration (Use test keys for development)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Database Configuration
SUPABASE_DB_URL=jdbc:postgresql://your-supabase-host:5432/postgres
SUPABASE_DB_USERNAME=your-supabase-username
SUPABASE_DB_PASSWORD=your-supabase-password
DB_POOL_MAX_SIZE=200
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_TIMEZONE=Europe/Lisbon

# JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=true

# Application Settings
APP_API_KEY=your-application-api-key-here

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_SECURITY_TRACE=TRACE
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDER=TRACE

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_VERIFY_URL=https://www.google.com/recaptcha/api/siteverify

# CORS
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,https://yourdomain.com